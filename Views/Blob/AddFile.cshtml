@using AzureUdemy.Models.ViewModels
@model BlobFileViewModel
<form method="post" asp-action="AddFile" asp-controller="Blob" enctype="multipart/form-data">
    <div class="container">
        <h3 class="py-2">Container Name -  @Model.ContainerName</h3>
        <input hidden name="containerName" value="@Model.ContainerName" />
        <div class="row border p-2">
            <div class="col-12 pb-2"><h4 class="text-primary">Add Item to Blob :</h4></div>
            <div class="col-3 py-2">Title MetaData</div>
            <div class="col-9 py-2">
                <input asp-for="Model.Title" class="form-control py-2" />
            </div>
            <div class="col-3 py-2">Comment MetaData</div>
            <div class="col-9 py-2">
                <input asp-for="Model.Comment" class="form-control py-2" />
            </div>


            <div class="form-group col-9">
                <input asp-for="File" type="file" class="form-control pt-1" />
            </div>
            <div class="form-group col-3">
                <button type="submit" class="btn btn-success form-control">Add</button>
            </div>
        </div>
    </div>
</form>